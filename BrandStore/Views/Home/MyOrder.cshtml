@model IEnumerable<BrandStore.Models.Basket>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
</head>
<body>
    <section class="static about-sec">
        <h1>My Orders</h1>

        @if (Model.Any())
        {
            <div class="card">
                <table id="myOrderTable" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>Islemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @if (item.Status == "KARGO")
                                    {
                                        <span>KARGO</span>
                                    }
                                    else if (item.Status == "IPTAL")
                                    {
                                        <span>IPTAL</span>
                                    }
                                    else
                                    {
                                        <span>TAMAMLANDI</span>
                                    }
                                </td>
                                @if (item.Status == "KARGO")
                                {
                                    <td style="display: flex;">
                                        <a style="padding: 5px;width: 50%;" asp-controller="Home" asp-action="OrderDetails" asp-route-orderId="@item.Id"><input type="submit" value="Detay" class="btn btn-success" /></a>

                                        <a style="padding: 5px;width: 50%;" asp-controller="Home" asp-action="CancelOrder" asp-route-orderId="@item.Id"><input type="submit" value="Iptal Et" class="btn btn-success" /></a>
                                    </td>
                                }
                                else
                                {
                                    <td style="display: flex;">
                                        <a style="padding: 5px;width: 50%;" asp-controller="Home" asp-action="OrderDetails" asp-route-orderId="@item.Id"><input type="submit" value="Detay" class="btn btn-success" /></a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p style="margin-left:50px;">Hic Siparis Yok :/</p>
        }
    </section>
</body>
</html>



