@model BrandStore.Models.Brand
@{
    Layout = "_LayoutSuperAdmin";
}
<div class="main-content">
    <div class="container">
        <h1>Duzenle</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhotoFile" class="control-label"></label>
                        <input asp-for="PhotoFile" class="form-control" />
                        <span asp-validation-for="PhotoFile" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Active" />
                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-block btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <form asp-action="Index">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="submit" value="Listeye Don" class="btn btn-block btn-primary" />
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
